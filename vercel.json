{
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }],
  
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers" : [
        {
          "key" : "X-Content-Type-Options",
          "value" : "nosniff"
        },
        {
          "key" : "X-Frame-Options",
          "value" : "DENY"
        },
        {
          "key" : "X-XSS-Protection",
          "value" : "1; mode=block"
        },
        {
          "key" : "Content-Security-Policy",
          "value" : "default-src 'self'; img-src 'self' data:; style-src https: 'unsafe-inline'; script-src https: 'unsafe-inline'; base-uri 'self'; frame-ancestors 'none'"
        },
      {
          "key" : "Referrer-Policy",
          "value" : "same-origin"
        },
        {
	      "key" : "Strict-Transport-Security",
	      "value" : "max-age=63072000; includeSubDomains; preload"
		}
      ]
    }
  ]
}